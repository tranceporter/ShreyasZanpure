<div class="modal fade rsvpModal" role="dialog" aria-labelledby="rsvpModal">
    <div class="modal-dialog" role="document">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title">RSVP</h3>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="rsvpForm" name="rsvpForm" action="/Home/SendRsvp" method="post">
                    <div class="form-group">
                        <span for="familyName" class="col-md-3 control-label">Family Name</span>
                        <div class="col-md-5">
                            <input type="text" class="form-control" id="familyName" name="familyName" placeholder="Family Name">
                        </div>
                        <div class="col-md-4">
                            <span id="familyNameRequired" class="alert alert-danger">Please enter family name</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <span for="attendance" class="col-md-3 control-label">Attending</span>
                        <div class="col-md-3">
                            <input class="col-md-3" type="checkbox" data-on-color="info" data-off-color="danger" data-on-text="Yes" data-off-text="No" data-animate="true" id="attendance" name="attendance" checked>
                        </div>
                    </div>
                    <div class="form-group" id="mealDiv">
                        <span for="mealPreference" class="col-md-3 control-label">Vegetarian</span>
                        <div class="col-md-3">
                            <input class="col-md-3" type="checkbox" data-on-color="info" data-off-color="danger" data-on-text="Yes" data-off-text="No" data-animate="true" id="mealPreference" name="mealPreference" checked>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="sendRsvp" class="btn btn-success">Send</button>
            </div>
        </div><!-- /.modal-content -->

    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
